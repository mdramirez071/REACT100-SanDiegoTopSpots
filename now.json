{
    "version": 2,
    "routes": [
      { "src": "/", "dest": "/public/index.html" },
      { "src": "/bundle.js", "dest": "/dist/bundle.js" },
      { "src": "/(.*)", "dest": "/server/index.js" }
    ],
    "builds": [
      { "src": "dist/**/*", "use": "@now/static" },
      { "src": "public/*", "use": "@now/static" },
      { "src": "server/*", "use": "@now/node" }
    ]
}